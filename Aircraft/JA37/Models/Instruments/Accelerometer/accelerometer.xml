<?xml version="1.0"?>


<PropertyList>

    <path>../gauge.ac</path>

    <effect>
        <inherits-from>Aircraft/JA37/Models/Effects/ja37-cockpit-transparent-shader</inherits-from>
        <object-name>glass</object-name>
    </effect>

    <effect>
        <inherits-from>Aircraft/JA37/Models/Effects/ja37-cockpit-shader</inherits-from>
        <object-name>mount</object-name>
    </effect>

    <animation>
        <type>material</type>
        <object-name>dial</object-name>
        <property-base>ja37/texture</property-base>
        <texture-prop>gauge-acc</texture-prop>
        <texture>accelerometer.png</texture>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>glass</object-name>
        <object-name>mount</object-name>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>accelerometer</tooltip-id>
                <label>Pulling %2.1fG</label>
                <property>ja37/accelerations/pilot-G</property>
            </binding>
        </hovered>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>needle</object-name>
        <condition>
            <greater-than>
                <property>systems/electrical/outputs/ac-instr-voltage</property>
                <value>100</value>
            </greater-than>
        </condition>
        <property>ja37/accelerations/pilot-G</property>
        <interpolation>
            <entry>
                <ind>-2</ind>
                <dep>-45</dep>
            </entry>
            <entry>
                <ind>0</ind>
                <dep>0</dep>
            </entry>
            <entry>
                <ind>9</ind>
                <dep>202.5</dep>
            </entry>
        </interpolation>
        <center>
            <x-m>0</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
        </center>
        <axis>
            <x>-1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>
