<?xml version="1.0"?>

<PropertyList>

    <path>../gauge.ac</path>

    <effect>
        <inherits-from>Aircraft/JA37/Models/Effects/ja37-cockpit-transparent-shader</inherits-from>
        <object-name>glass</object-name>
    </effect>

    <effect>
        <inherits-from>Aircraft/JA37/Models/Effects/ja37-cockpit-shader</inherits-from>
        <object-name>mount</object-name>
    </effect>

    <animation>
        <type>material</type>
        <object-name>dial</object-name>
        <property-base>ja37/texture</property-base>
        <texture-prop>gauge-airspeed</texture-prop>
        <texture>airspeed-face.png</texture>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>needle</object-name>
        <condition>
            <greater-than>
                <property>systems/electrical/outputs/ac-instr-voltage</property>
                <value>100</value>
            </greater-than>
        </condition>
        <property>instrumentation/airspeed-indicator/indicated-speed-kt</property>
        <interpolation>
            <entry>
                <ind>0</ind>
                <dep>24</dep>
            </entry>
            <entry>
                <ind>539.9568034557235</ind>
                <dep>145</dep>
            </entry>
            <!--   1000 km/h -->
            <entry>
                <ind>1403.887688984881</ind>
                <dep>337.5</dep>
            </entry>
            <!-- 2600 km/h -->
        </interpolation>
        <axis>
            <x>-1.0</x>
        </axis>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>glass</object-name>
        <object-name>mount</object-name>
        <condition>
            <greater-than>
                <property>systems/electrical/outputs/dc-voltage</property>
                <value>20</value>
            </greater-than>
        </condition>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>airspeed</tooltip-id>
                <label>Airspeed: %4d kt</label>
                <property>/velocities/airspeed-kt</property>
                <!-- /instrumentation/airspeed-indicator/indicated-mach -->
            </binding>
        </hovered>
    </animation>

    <!-- lighting -->
    <animation>
        <object-name>needle</object-name>
        <object-name>dial</object-name>
        <type>material</type>
        <emission>
            <red-prop>instrumentation/instrumentation-light/r</red-prop>
            <green-prop>instrumentation/instrumentation-light/g</green-prop>
            <blue-prop>instrumentation/instrumentation-light/b</blue-prop>
            <factor-prop>controls/lighting/instruments-norm</factor-prop>
        </emission>
    </animation>

</PropertyList>
