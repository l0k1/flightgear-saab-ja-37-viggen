	<!--
	**********************************
	TILS Knob
	**********************************
	-->
	
	<animation>
		<type>pick</type>
		<object-name>A2_disc_UV_mapped_TILS</object-name>
		<object-name>A2_handle</object-name>
		<object-name>A2_screw</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>property-adjust</command>
				<property>/sim/ja37/navigation/tils-knob</property>
				<step>1</step>
				<min>0</min>
				<max>11</max>
				<wrap>true</wrap>
			</binding>
		</action>
		<action>
			<button>1</button>
			<repeatable>false</repeatable>
			<binding>
				<command>property-adjust</command>
				<property>/sim/ja37/navigation/tils-knob</property>
				<step>-1</step>
				<min>0</min>
				<max>11</max>
				<wrap>true</wrap>
			</binding>
		</action>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>A2_disc_UV_mapped_TILS</object-name>
		<object-name>A2_handle</object-name>
		<object-name>A2_screw</object-name>
		<property>/sim/ja37/navigation/tils-knob</property>
		<factor>30</factor>
		<center>
			<x-m>  0.04897 </x-m>
			<y-m>  0.00000 </y-m>
			<z-m>  0.00000 </z-m>
		</center>
		<axis>
			<x>0</x>
			<y>0</y>
			<z>-1</z>
		</axis>
	</animation>
	
