<?xml version="1.0"?>
<PropertyList>
    <path>../gauge.ac</path>

    <effect>
        <inherits-from>Aircraft/JA37/Models/Effects/ja37-cockpit-transparent-shader</inherits-from>
        <object-name>glass</object-name>
    </effect>

    <effect>
        <inherits-from>Aircraft/JA37/Models/Effects/ja37-cockpit-shader</inherits-from>
        <object-name>mount</object-name>
    </effect>

    <animation>
        <type>material</type>
        <object-name>dial</object-name>
        <property-base>ja37/texture</property-base>
        <texture-prop>gauge-distindicator</texture-prop>
        <texture>distindicator.png</texture>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>needle</object-name>
        <condition>
			<and>
				<greater-than>
					<property>systems/electrical/outputs/ac-instr-voltage</property>
					<value>100</value>
				</greater-than>
				<less-than>
					<property>autopilot/route-manager/wp/dist-km</property>
					<value>40</value>
				</less-than>
			</and>
        </condition>
        <property>autopilot/route-manager/wp/dist-km</property>
        <factor>6</factor>
        <offset-deg>240</offset-deg>
        <axis>
            <x>-1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>glass</object-name>
        <object-name>mount</object-name>
        <condition>
			<and>
				<greater-than>
					<property>systems/electrical/outputs/dc-voltage</property>
					<value>20</value>
				</greater-than>
				<less-than>
					<property>autopilot/route-manager/wp/dist-km</property>
					<value>40</value>
				</less-than>
			</and>
        </condition>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>distance</tooltip-id>
                <label>Distance to waypoint/DME: %.1f km</label>
                <property>autopilot/route-manager/wp/dist-km</property>
            </binding>
        </hovered>
    </animation>


    <!-- lighting -->
    <animation>
        <object-name>dial</object-name>
        <object-name>needle</object-name>
        <type>material</type>
        <emission>
            <red-prop>instrumentation/instrumentation-light/r</red-prop>
            <green-prop>instrumentation/instrumentation-light/g</green-prop>
            <blue-prop>instrumentation/instrumentation-light/b</blue-prop>
            <factor-prop>controls/lighting/instruments-norm</factor-prop>
        </emission>
    </animation>


</PropertyList>
