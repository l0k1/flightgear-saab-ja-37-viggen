<?xml version="1.0"?>

<PropertyList>

    <path>button-double-g.ac</path>

    <effect>
        <inherits-from>Aircraft/JA37/Models/Effects/ja37-cockpit-shader</inherits-from>
        <object-name>buttonLeft</object-name>
        <object-name>buttonRight</object-name>
        <object-name>plate</object-name>
        <object-name>ringLeft</object-name>
        <object-name>ringRight</object-name>
    </effect>

    <animation>
        <type>pick</type>
        <object-name>plate</object-name>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>button-test-ind</tooltip-id>
                <label>Follow another aircraft using autopilot</label>
            </binding>
        </hovered>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>buttonLeft</object-name>
        <action>
            <button>0</button>
            <binding>
                <command>property-assign</command>
                <property>controls/flight/autopilot-follow-on</property>
                <value>1</value>
            </binding>
            <binding>
                <command>nasal</command>
                <script>ja37.follow();</script>
            </binding>
            <mod-up>
                <binding>
                    <command>property-assign</command>
                    <property>controls/flight/autopilot-follow-on</property>
                    <value>0</value>
                </binding>
            </mod-up>
        </action>
    </animation>

    <animation>
        <type>translate</type>
        <object-name>buttonLeft</object-name>
        <property>controls/flight/autopilot-follow-on</property>
        <factor>-0.0030</factor>
        <axis>
            <x> 0.0 </x>
            <y> 0.0 </y>
            <z> 1.0 </z>
        </axis>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>buttonRight</object-name>
        <action>
            <button>0</button>
            <binding>
                <command>property-assign</command>
                <property>controls/flight/autopilot-follow-off</property>
                <value>1</value>
            </binding>
            <binding>
                <command>nasal</command>
                <script>ja37.unfollow();</script>
            </binding>
            <mod-up>
                <binding>
                    <command>property-assign</command>
                    <property>controls/flight/autopilot-follow-off</property>
                    <value>0</value>
                </binding>
            </mod-up>
        </action>
    </animation>

    <animation>
        <type>translate</type>
        <object-name>buttonRight</object-name>
        <property>controls/flight/autopilot-follow-off</property>
        <factor>-0.0030</factor>
        <axis>
            <x> 0.0 </x>
            <y> 0.0 </y>
            <z> 1.0 </z>
        </axis>
    </animation>

