<?xml version="1.0"?>

<PropertyList>

    <path>button-red.ac</path>

	<effect>
        <inherits-from>Effects/model-transparent</inherits-from>
        <object-name>Text</object-name>
    </effect>

    <animation>
        <type>pick</type>
        <object-name>Surface</object-name>
        <object-name>Ring</object-name>
        <action>
            <button>0</button>
            <binding>
                <command>property-assign</command>
                <property>ja37/avionics/master-warning-button</property>
                <value>1</value>
            </binding>
            <mod-up>
                <binding>
                    <command>property-assign</command>
                    <property>ja37/avionics/master-warning-button</property>
                    <value>0</value>
                </binding>
            </mod-up>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>Master warning silence</tooltip-id>
                <label>Master warning silence</label>
                <property>/instrumentation/master-warning</property>
            </binding>
        </hovered>
    </animation>

    <animation>
        <type>material</type>
        <object-name>Text</object-name>
        <property-base>ja37/texture</property-base>
        <texture-prop>button-master-alert</texture-prop>
        <texture>button-master-alert.png</texture>
    </animation>

    <animation>
        <type>material</type>
        <object-name>Text</object-name>
        <emission>
            <red-prop>instrumentation/instrumentation-light/r</red-prop>
            <green-prop>instrumentation/instrumentation-light/g</green-prop>
            <blue-prop>instrumentation/instrumentation-light/b</blue-prop>
            <factor-prop>controls/lighting/instruments-norm</factor-prop>
        </emission>
    </animation>

    <animation>
        <type>material</type>
        <object-name>Ring</object-name>
        <condition>
            <equals>
                <property>ja37/avionics/master-warning-button</property>
                <value>1</value>
            </equals>
        </condition>
        <emission>
            <red-prop>instrumentation/instrumentation-light/r</red-prop>
            <green-prop>instrumentation/instrumentation-light/g</green-prop>
            <blue-prop>instrumentation/instrumentation-light/b</blue-prop>
            <factor-prop>controls/lighting/instruments-norm</factor-prop>
        </emission>
    </animation>

</PropertyList>
