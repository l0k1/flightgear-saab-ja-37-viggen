<?xml version="1.0"?>

<PropertyList>

    <path>switch.ac</path>

    <effect>
        <inherits-from>Aircraft/JA37/Models/Effects/ja37-cockpit-shader</inherits-from>
        <object-name>Switch</object-name>
    </effect>

	<effect>
        <inherits-from>Effects/model-transparent</inherits-from>
        <object-name>Text</object-name>
    </effect>

    <animation>
        <type>pick</type>
        <object-name>Switch</object-name>
        <object-name>Base</object-name>
        <action>
            <button>0</button>
            <binding>
                <command>nasal</command>
                <script>canvas_HUD.toggleCallsign()</script>
            </binding>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>switch-callsign</tooltip-id>
                <label>HUD selection indication</label>
                <property>ja37/hud/callsign</property>
            </binding>
        </hovered>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>Switch</object-name>
        <property>ja37/hud/callsign</property>
        <factor>70</factor>
        <offset-deg>-35</offset-deg>
        <center>
            <x-m> 0.0121 </x-m>
            <y-m> 0.0 </y-m>
            <z-m> 0.0 </z-m>
        </center>
        <axis>
            <x> 0.0 </x>
            <y> 0.0 </y>
            <z>-1.0 </z>
        </axis>
    </animation>

    <animation>
        <type>material</type>
        <object-name>Text</object-name>
        <property-base>ja37/texture</property-base>
        <texture-prop>switch-callsign</texture-prop>
        <texture>switch-callsign.png</texture>
    </animation>

    <animation>
        <type>material</type>
        <object-name>Base</object-name>
        <object-name>Text</object-name>
        <emission>
            <red-prop>instrumentation/instrumentation-light/r</red-prop>
            <green-prop>instrumentation/instrumentation-light/g</green-prop>
            <blue-prop>instrumentation/instrumentation-light/b</blue-prop>
            <factor-prop>controls/lighting/instruments-norm</factor-prop>
        </emission>
    </animation>
</PropertyList>
